{
  "mcpServers": {
    "purelymail": {
      "command": "nix",
      "args": [
        "run",
        "github:gui-wf/purelymail-mcp-server",
        "--quiet",
        "--refresh"
      ],
      "env": {
        "PURELYMAIL_API_KEY": "${PURELYMAIL_API_KEY}",
        "MOCK_MODE": "false"
      }
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "mcp-sequentialthinking-tools"],
      "env": {
        "MAX_HISTORY_SIZE": "1000"
      }
    },
    "perplexity": {
      "command": "npx",
      "args": ["-y", "perplexity-mcp"],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    }
  }
}
