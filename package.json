{
  "name": "purelymail-mcp-server",
  "version": "2.0.0",
  "description": "MCP server for PurelyMail email service management",
  "keywords": [
    "mcp",
    "mcp-server",
    "purelymail",
    "email",
    "ai",
    "claude"
  ],
  "homepage": "https://github.com/gui-wf/purelymail-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/gui-wf/purelymail-mcp-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gui-wf/purelymail-mcp-server.git"
  },
  "license": "MIT",
  "author": "Guilherme Fontes <contrib@gui.wf> (https://gui.wf)",
  "main": "dist/index.js",
  "bin": {
    "purelymail-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/",
    "src/types/",
    "purelymail-api-spec.json",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "preferGlobal": false,
  "type": "module",
  "scripts": {
    "fetch:swagger": "node scripts/fetch-swagger.js",
    "generate:types": "openapi-typescript purelymail-api-spec.json -o src/types/purelymail-api.ts",
    "generate:docs": "node scripts/extract-endpoints.js > endpoint-descriptions.md",
    "update:api": "npm run fetch:swagger && npm run generate:types && npm run generate:docs",
    "version:update": "bash scripts/update-version.sh",
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "test:mock": "MOCK_MODE=true vitest",
    "inspector": "MOCK_MODE=true npx @modelcontextprotocol/inspector tsx src/index.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "openapi-fetch": "^0.14.0",
    "openapi-typescript": "^7.9.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
